<div class="container">
  <div class="row">
    <div class="col-xs-3">

      <%= render 'books/side',books: @books,book: @bookn,user: @user %>

    </div>

    <div class="col-xs-9">
      <h1><strong>Users</strong></h1>
        <table class="table table-striped">
  	      <thead>
  	        <tr>
  	          <th>image</th>
  	          <th>name</th>
              <th></th>
  	        </tr>
  	      </thead>

  	      <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, :fill ,10,10, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: '40x40'%></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_posts_path(user.id) %>
              </tr>
            <% end %>
        	</tbody>
        </table>
    </div>
  </div>
</div>