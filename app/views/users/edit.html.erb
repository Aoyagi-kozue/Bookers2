<div class="container">
  <div class="row">
    <div class="col-xs-3">
        <h2>User info</h2>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= @user.errors.count %> errors prohibited this book from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                <li> <%= msg %> </li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= form_for(@user) do |f| %>
          <div class="field">
            <label for="user_name">Name</label>
            <%= f.text_field :name, autofocus: true, class:"form-control", id:"user_name", placeholder:"名前"%>
          </div>
          <div class="field">
            <label for="profile_image">Image</label>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
          </div>
          <div class="field">
            <label for="introduction">Introduction</label>
            <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"introduction", placeholder: "よろしくお願いします" %>
          </div>
          <div class="action">
            <%= f.submit "Update User", class:"btn btn-default" %>
          </div>
        <% end %>
