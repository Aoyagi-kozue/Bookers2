<div class="container">
  <div class="row">
    <div class="col-xs-3">

      <%= render 'books/side',books: @books,book: @bookn,user: @user %>

    </div>

    <div class="col-xs-9">
      <h1><strong>Books</strong></h1>
        <table class="table table-striped">
  	      <thead>
  	        <tr>
  	          <th></th>
  	          <th>Title</th>
  	          <th>Body</th>
  	        </tr>
  	      </thead>

  	      <tbody>
            <% @posts.each do |post| %>
              <tr>
              	<td><%= attachment_image_tag post.user, :profile_image, :fill ,10,10, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: '40x40'%></td>
                <td><%= link_to post.title, book_path(post.id) %></td>
                <td><%= post.body %></td>
              </tr>
            <% end %>
        	</tbody>
        </table>
    </div>
  </div>
</div>