<div class="container">
  <div class="row">
    <div class="col-xs-3">

      <%= render 'books/side',books: @books,book: @bookn,user: @user %>

    </div>

    <div class="col-xs-9">
      <h1><strong>Books detail</strong></h1>
        <table class="table table-striped">
  	      <thead>
  	      </thead>

  	      <tbody>
              <tr>
                <td>
                  <%= link_to user_posts_path(@user.id) do %>
                    <%= attachment_image_tag @user, :profile_image, size: '40x40', format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: '40x40' %><br><br> <%= @user.name %>
                  <% end %>
                </td>
                <td><%= link_to @book.title,book_path(@book) %></td>
                <td><%= @book.body %></td>
                <% if @user.id==current_user.id %>
                  <td><%= link_to "Edit",edit_book_path(@book) %></td>
                  <td><%= link_to "Destroy",book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %></td>
                <% end %>
              </tr>
        	</tbody>
        </table>
    </div>
  </div>
</div>