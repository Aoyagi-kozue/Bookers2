<div class="container">
  <div class="row">
    <h1>Editing Book</h1>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <%= form_for (@book) do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title, class: 'form-control' %>
        <h4>Body</h4>
        <%= f.text_area :body, class: 'form-control'%>

         <div class="row">
          <div class="col-lg-12">
            <%= f.submit "Update Book", class: 'btn btn-primary btn-block' %>
           </div>
        </div>
      <% end %>

      <div class="container">
        <div class="row">
          <%= link_to "Show", book_path(@book.id) %>
          <%= link_to "Back", books_path %>
        </div>
      </div>
    </div>
  </div>
</div>