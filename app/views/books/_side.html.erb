
    <% if flash[:notice] %>
      <p class="flash"><%= flash[:notice] %></p>
    <% end %>

    <h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
    <table class="table">
      <tbody>
        <tr>
　　　     <th><p>name</p></th>
          <th>  <%= user.name %></th>
        </tr>
        <tr>
　　　     <th><p>introduction</p></th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <div class="col-xs-12">
          <%=link_to edit_user_path(user), class: 'btn btn-default btn-block' do %>
            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
          <% end %>
      </div>
    </div>

    <h2>New book</h2>
    <% if book.errors.any? %>
      <div id="error_explanation">
        <h2><%= book.errors.count %> errors prohibited this book from being saved:</h2>
        <ul>
          <% book.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_for(book) do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title, class: 'form-control'%>
      <h4>Opinion</h4>
      <%= f.text_area :body, class: 'form-control' %>
      <div class="row">
        <%= f.submit "Create Book", class: 'btn btn-primary btn-block'%>
      </div>
    <% end %>